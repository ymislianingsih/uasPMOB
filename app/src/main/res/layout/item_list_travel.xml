<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:background="@drawable/cardview_list"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:clickable="true"
    app:cardCornerRadius="15dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cardview_list"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageView
            android:id="@+id/Gambar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginEnd="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/_avanza_gray_metallic_removebg_preview_1" />

        <TextView
            android:id="@+id/TeksLokasi"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/Gambar"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="113dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/Gambar"
            android:text="@string/lokasitujuan"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TeksNama"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/Gambar"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/Gambar"
            android:text="@string/nama"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnDeleteProduct"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/TeksNama"
            android:layout_marginStart="28dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/Gambar"
            android:background="@drawable/logo_delete" />

        <Button
            android:id="@+id/btnUpdateProduct"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/TeksNama"
            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/Gambar"
            android:background="@drawable/logo_edit" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>

